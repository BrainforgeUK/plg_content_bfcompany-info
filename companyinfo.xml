<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5" type="plugin" group="content" method="upgrade">
	<name>PLG_CONTENT_COMPANYINFO</name>
  <creationDate>09 January 2011</creationDate>
  <author>Jonathan Brain</author>
  <authorEmail>brainforge@btinternet.com</authorEmail>
  <authorUrl>http://www.brainforge.co.uk</authorUrl>
  <copyright>Copyright 2011-2020 Jonathan Brain. All rights reserved.</copyright>
  <license>GNU General Public License version 2 or later; see LICENSE.txt</license>
  <version>4.0.4</version>

	<description>PLG_CONTENT_COMPANYINFO_XML_DESCRIPTION</description> 

	<files>		
		<filename plugin="companyinfo">companyinfo.php</filename>		
	</files>

	<languages folder="administrator/language/en-GB">
		<language tag="en-GB">en-GB.plg_content_companyinfo.ini</language>
		<language tag="en-GB">en-GB.plg_content_companyinfo.sys.ini</language>
	</languages>

  <config>
    <fields name="params">
    	<fieldset name="basic">
    		<field name="telephone" type="text" size="40"
    			description="PLG_CONTENT_COMPANYINFO_TELNO_DESC"
    			label="PLG_CONTENT_COMPANYINFO_TELNO_LABEL"/>					
    		<field name="telephone2" type="text" size="40"
    			description="PLG_CONTENT_COMPANYINFO_TELNO2_DESC"
    			label="PLG_CONTENT_COMPANYINFO_TELNO2_LABEL"/>					
    		<field name="mobile" type="text" size="40"
    			description="PLG_CONTENT_COMPANYINFO_MOBILE_DESC"
    			label="PLG_CONTENT_COMPANYINFO_MOBILE_LABEL"/>					
    		<field name="mobile2" type="text" size="40"
    			description="PLG_CONTENT_COMPANYINFO_MOBILE2_DESC"
    			label="PLG_CONTENT_COMPANYINFO_MOBILE2_LABEL"/>					
    		<field name="email" type="text" size="50"
    			description="PLG_CONTENT_COMPANYINFO_EMAIL_DESC"
    			label="PLG_CONTENT_COMPANYINFO_EMAIL_LABEL"/>					
    		<field name="email2" type="text" size="50"
    			description="PLG_CONTENT_COMPANYINFO_EMAIL2_DESC"
    			label="PLG_CONTENT_COMPANYINFO_EMAIL2_LABEL"/>					
    		<field name="email3" type="text" size="50"
    			description="PLG_CONTENT_COMPANYINFO_EMAIL3_DESC"
    			label="PLG_CONTENT_COMPANYINFO_EMAIL3_LABEL"/>					
    		<field name="email4" type="text" size="50"
    			description="PLG_CONTENT_COMPANYINFO_EMAIL4_DESC"
    			label="PLG_CONTENT_COMPANYINFO_EMAIL4_LABEL"/>					
    		<field name="facebook" type="text" size="50"
    			description="PLG_CONTENT_COMPANYINFO_FACEBOOK_DESC"
    			label="PLG_CONTENT_COMPANYINFO_FACEBOOK_LABEL"/>					
    		<field name="twitter" type="text" size="50"
    			description="PLG_CONTENT_COMPANYINFO_TWITTER_DESC"
    			label="PLG_CONTENT_COMPANYINFO_TWITTER_LABEL"/>					
    		<field name="vatno" type="text" size="40"
    			description="PLG_CONTENT_COMPANYINFO_VATNO_DESC"
    			label="PLG_CONTENT_COMPANYINFO_VATNO_LABEL"/>					
    		<field name="companyno" type="text" size="40"
    			description="PLG_CONTENT_COMPANYINFO_COMPANYNO_DESC"
    			label="PLG_CONTENT_COMPANYINFO_COMPANYNO_LABEL"/>					
    		<field name="location" type="textarea" rows="3" cols="50"
          filter="raw"
    			description="PLG_CONTENT_COMPANYINFO_LOCATION_DESC"
    			label="PLG_CONTENT_COMPANYINFO_LOCATION_LABEL"/>					
    		<field name="extra" type="textarea" rows="2" cols="50"
          filter="raw"
    			description="PLG_CONTENT_COMPANYINFO_EXTRA_DESC"
    			label="PLG_CONTENT_COMPANYINFO_EXTRA_LABEL"/>					
    		<field name="extra2" type="textarea" rows="2" cols="50"
          filter="raw"
    			description="PLG_CONTENT_COMPANYINFO_EXTRA2_DESC"
    			label="PLG_CONTENT_COMPANYINFO_EXTRA2_LABEL"/>					
    		<field name="extra3" type="textarea" rows="2" cols="50"
          filter="raw"
    			description="PLG_CONTENT_COMPANYINFO_EXTRA3_DESC"
    			label="PLG_CONTENT_COMPANYINFO_EXTRA3_LABEL"/>					
    	</fieldset>
    </fields>
  </config>

	<updateservers>
		<server type="extension" priority="1" name="Content - Company Information by BrainforgeUK">
			https://brainforge.co.uk/component/bfupdater?element=plg_content_bfcompany-info.xml
		</server>
	</updateservers>
</extension>